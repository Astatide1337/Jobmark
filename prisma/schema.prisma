// Jobmark Database Schema
// PostgreSQL with Neon Serverless

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Core application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Legacy Settings (kept for compatibility)
  weekendStreakEnabled Boolean @default(true)
  defaultProjectId     String?
  monthlyActivityGoal  Int     @default(20)

  // Relations
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  activities    Activity[]
  reports       Report[]
  goals         Goal[]
  settings      UserSettings?
  conversations Conversation[]
  contacts      Contact[]
  interactionLogs InteractionLog[]
}

model Goal {
  id        String   @id @default(cuid())
  userId    String
  title     String   @db.VarChar(200) // "Decide exactly what you want"
  deadline  DateTime?
  why       String?  @db.VarChar(500) // "Why is it important"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]

  @@index([userId])
}

model UserSettings {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Goals (Brian Tracy Method)
  primaryGoal   String?
  goalDeadline  DateTime?
  whyStatement  String?   @db.Text
  dailyTarget   Int       @default(1)
  weeklyTarget  Int       @default(10)
  monthlyTarget Int       @default(40)

  // Report Customization
  defaultTone        String  @default("professional")
  customInstructions String? @db.Text

  // Appearance
  themePreset     String @default("cafe")
  themeMode       String @default("dark")

  // Preferences
  hideArchived    Boolean @default(false)
  showConfetti    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String   @db.Text
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String   @db.VarChar(50)
  color       String   @default("#6366f1")
  description String?  @db.VarChar(200)
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  activities Activity[]
  conversations Conversation[]

  @@index([userId])
  @@index([userId, archived])
}

model Activity {
  id        String   @id @default(cuid())
  userId    String
  projectId String?
  content   String   @db.Text
  logDate   DateTime @default(now()) @db.Date
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([userId, logDate(sort: Desc)])
  @@index([projectId])
  @@index([userId, createdAt(sort: Desc)])
}

model Contact {
  id                String           @id @default(cuid())
  userId            String
  fullName          String           @db.VarChar(150)
  phone             String?          @db.VarChar(50)
  email             String?          @db.VarChar(255)
  birthday          DateTime?
  relationship      String?          @db.VarChar(120)
  personalityTraits String?          @db.Text
  notes             String?          @db.Text
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactions InteractionLog[]
  conversations Conversation[]

  @@index([userId, fullName])
  @@index([userId, createdAt(sort: Desc)])
  @@index([userId, email])
}

model InteractionLog {
  id           String   @id @default(cuid())
  userId       String
  contactId    String
  occurredAt   DateTime @default(now())
  channel      String   @default("other")
  summary      String   @db.Text
  nextStep     String?  @db.Text
  followUpDate DateTime?
  rawNotes     String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([userId, contactId, occurredAt(sort: Desc)])
  @@index([userId, followUpDate])
}

// Chat models for AI Career Coach
model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String    @default("New Chat")
  mode      String    @default("general") // "general" | "goal-coach" | "interview"
  
  // Context references
  projectId String?   // If conversation is about a specific project
  goalId    String?   // If conversation is about a specific goal
  contactId String?   // If conversation references a specific contact
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  goal      Goal?     @relation(fields: [goalId], references: [id], onDelete: SetNull)
  contact   Contact?  @relation(fields: [contactId], references: [id], onDelete: SetNull)
  messages  Message[]

  @@index([userId, updatedAt(sort: Desc)])
  @@index([userId, contactId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String       // "user" | "assistant" | "system"
  content        String       @db.Text
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}
